#!/bin/bash
# homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew tap caskroom/cask
brew upgrade
# emacs
brew install emacs --with-cocoa
# cask
brew install cask
PROFILE=~/.bash_acprofile
echo PATH=$PATH:~/.cask/bin >> ~/.bash_profile
source ~/.bash_profile
brew cask install
cask upgrade
ls | grep Cask || cask init
cask install
